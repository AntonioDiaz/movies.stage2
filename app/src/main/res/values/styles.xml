<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBar.Solid.Movies.Title"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <!--<item name="logo">@mipmap/ic_launcher</item>-->
        <item name="logo">@drawable/logo_space</item>
    </style>

    <style name="AppTheme.Movies" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Movies.Title</item>
    </style>


</resources>
